		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@types/node": "^20.11.17",
		"tsdown": "^0.16.3",
		"tsx": "^4.7.1",
		"typescript": "^5.8.3",
		"vitest": "^4.0.8"
	},
	"main": "./dist/serve.mjs",
	"module": "./dist/serve.mjs",
	"exports": {
		".": "./dist/serve.mjs",
		"./package.json": "./package.json"
