{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["es2023"],
		"moduleDetection": "force",
		"module": "preserve",
		"moduleResolution": "bundler",
		"strict": true,
		"noUnusedLocals": true,
		"declaration": true,
		"resolveJsonModule": true,
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"types": ["node"],
		"outDir": "./dist"
	},
	"exclude": ["node_modules"]
}
